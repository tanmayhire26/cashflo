class Order {
  constructor(private readonly items: OrderItem[]) {}

  getTotalPrice(): number {
    return this.items.reduce((acc, item) => acc + item.getPrice(), 0);
  }
}

class OrderItem {
  constructor(private readonly product: Product, private readonly quantity: number) {}

  getPrice(): number {
    return this.product.getPrice() * this.quantity;
  }
}

class Product {
  constructor(private readonly name: string, private readonly price: number) {}

  getPrice(): number {
    return this.price;
  }
}

const order = new Order([
  new OrderItem(new Product("Apple", 1.0), 2),
  new OrderItem(new Product("Banana", 0.5), 3),
]);

console.log(order.getTotalPrice());